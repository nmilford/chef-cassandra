#/bin/bash
# Generated by Chef for <%= @node[:fqdn] %>
logFile="/var/log/cassandra/mainenance.log"

create_snapshot() {
  nodetool -h <%= node[:fqdn] %> -p <%= @node[:cassandra][:JMX_PORT] %> snapshot -t outbrain_auto
  status=$?
}

remove_snapshot() {
  nodetool -h <%= node[:fqdn] %> -p <%= @node[:cassandra][:JMX_PORT] %> clearsnapshot -t outbrain_auto
}

remove_snapshot
create_snapshot
